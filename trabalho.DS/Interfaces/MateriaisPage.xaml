<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="trabalho.DS.MateriaisPage"
             BackgroundColor="#B2EDA0">

    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        
        <Label Text="MATERIAIS"
               FontSize="24"
               FontAttributes="Italic"
               TextColor="White"
               HorizontalTextAlignment="Center"
               Margin="0,20,0,20"/>

        <Button Text="CADASTRO MATERIAIS"
                BackgroundColor="#8FBC8F"
                TextColor="Black"
                FontAttributes="Bold"
                 Clicked="Oncadastromaterial"
                Margin="0,10,0,10"
                WidthRequest="300"
                HeightRequest="50"/>

        <Button Text="GERENCIAMENTO MATERIAIS"
                BackgroundColor="#8FBC8F"
                TextColor="Black"
                FontAttributes="Bold"
                 Clicked="Ongerenciamentomaterial"
                Margin="0,10,0,10"
                WidthRequest="300"
                HeightRequest="50"/>

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,20,0,0">
          <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
             

            <!-- BotÃ£o Voltar -->
            <ImageButton Source="voltar.png"
                         HorizontalOptions="Start"
                         VerticalOptions="End"
                         Clicked="OnVoltarClicked"
                         Grid.Column="0" />

          
        </Grid>
        </StackLayout>

    </StackLayout>

</ContentPage>
