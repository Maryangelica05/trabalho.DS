<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="trabalho.DS.AddExpensePage"
             Title="Adicionar Novo Gasto">

    <StackLayout Padding="10" BackgroundColor="#A5D6A7">
        <Label Text="Data:" />
        <Entry x:Name="DateEntry" Placeholder="DD-MM-AAAA" />

        <Label Text="Descrição:" />
        <Entry x:Name="DescriptionEntry" Placeholder="Descrição do Gasto" />

        <Label Text="Valor:" />
        <Entry x:Name="ValueEntry" Placeholder="R$ 0,00" Keyboard="Numeric" />

        <Button Text="Atualizar Novos Gastos"
                Clicked="OnSaveExpenseClicked"
                BackgroundColor="#4CAF50"
                TextColor="White"
                HorizontalOptions="FillAndExpand" />
    </StackLayout>
</ContentPage>
