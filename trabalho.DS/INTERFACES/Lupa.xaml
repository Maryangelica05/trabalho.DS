<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="trabalho.DS.MainPage"
             BackgroundColor="MediumSeaGreen">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        
        <Image Source="lupa.png" // Certifique-se de que a imagem 'lupa.png' está incluída no projeto e configurada como recurso incorporado
               WidthRequest="100"
               HeightRequest="100"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
        
        <Label Text="LUPA FINANCE"
               FontSize="Large"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
        
        <Label Text="SUA VISÃO FINANCEIRA AMPLIADA"
               FontSize="Medium"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
        
        <Button Text="CONTINUAR"
                x:Name="ContinuarButton"
                BackgroundColor="LightGreen"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Clicked="OnContinuarButtonClicked"/>
        
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="⟵"
                    x:Name="BackButton"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Clicked="OnBackButtonClicked"/>
            <Button Text="⟶"
                    x:Name="ForwardButton"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Clicked="OnForwardButtonClicked"/>
        </StackLayout>
    </StackLayout>
</ContentPage>